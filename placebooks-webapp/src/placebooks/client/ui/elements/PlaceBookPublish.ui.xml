<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:p="urn:import:placebooks.client.ui.elements" xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.dialog {
			padding: 10px;
		}
		
		.arrowButton {
			cursor: pointer;
			padding: 3px 5px;
			border: 1px outset #CCE;
		}
		
		.innerImagePanel {
			position: relative;
			left: 30px;
			right: 30px;
			top: 0px;
			bottom: 0px;
		}
		
		.image {
			width: 100%;
		}
		
		.imagePanel {
			position: relative;
			display: -webkit-box;
		}
		
		.publishButton {
			float: right;
		}
		
		.desc {
			width: 300px;
			height: 50px;
		}
		
		.flexBox {
			-webkit-box-flex: 1
		}
		
		.inputPanel {
			display: -webkit-box;
		}
	</ui:style>
	<ui:with field='images' type='placebooks.client.ui.images.Images' />
	<g:FlowPanel styleName="{style.dialog}">
		<g:FlowPanel styleName="{style.imagePanel}">
			<g:Image ui:field="leftButton" styleName="{style.arrowButton}"
				resource="{images.arrow_left}" />
			<g:Image styleName="{style.image}" ui:field="placebookImage" />
			<g:Image ui:field="rightButton" styleName="{style.arrowButton}"
				resource="{images.arrow_right}" />
		</g:FlowPanel>

		<g:FlowPanel styleName="{style.inputPanel}">
			<g:Label styleName="{style.flexBox}">Title:</g:Label>
			<g:TextBox ui:field="title" styleName="{style.flexBox}" />
		</g:FlowPanel>
		<g:FlowPanel styleName="{style.inputPanel}">
			<g:Label styleName="{style.flexBox}">Location:</g:Label>
			<g:TextBox ui:field="location" styleName="{style.flexBox}"></g:TextBox>
		</g:FlowPanel>
		<g:FlowPanel styleName="{style.inputPanel}">
			<g:Label styleName="{style.flexBox}">Activity:</g:Label>
			<g:TextBox ui:field="activity" styleName="{style.flexBox}"></g:TextBox>
		</g:FlowPanel>
		<g:Label>Description:</g:Label>
		<g:FlowPanel>
			<g:TextArea ui:field="description" styleName="{style.desc}"></g:TextArea>
		</g:FlowPanel>
		<g:Button styleName="{style.publishButton}" ui:field="publish">Publish</g:Button>
	</g:FlowPanel>
</ui:UiBinder>