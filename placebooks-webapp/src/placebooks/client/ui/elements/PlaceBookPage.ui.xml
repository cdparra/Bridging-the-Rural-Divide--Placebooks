<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.outerPanel {
		}
		
		.innerPanel {
			position: absolute;
			left: 0px;
			top: 0px;

		}
		
		.columnPanel {
			position: absolute;
			left: 30px;
			top: 30px;	
			right: 30px;
			bottom: 30px;
		}
		
		.pageNumber {
			position: absolute;
			left: 30px;
			right: 30px;
			bottom: 0px;	
		}
	</ui:style>
	<g:FlowPanel ui:field="outerPanel" styleName="{style.outerPanel}">
		<g:FlowPanel ui:field="innerPanel" styleName="{style.innerPanel}">
			<g:FlowPanel ui:field="columnPanel"/>
			<g:Label ui:field="pageNumber"/>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 