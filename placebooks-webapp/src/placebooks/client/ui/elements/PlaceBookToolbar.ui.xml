<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:p="urn:import:placebooks.client.ui.elements"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	<ui:style>
		.signup {
			margin-left: 0px;
		}
		
		.toolbar {
			font: 18px/40px mako, sans-serif;
			height: 40px;
			color: #ccc;
			background: #2d2d2d;
			background: -webkit-linear-gradient(top, #2d2d2d, #111);
			background: -moz-linear-gradient(top, #2d2d2d, #111);			
			border-bottom: 1px solid #84817a;
			display: -webkit-box;
			-webkit-box-orient: horizontal;
			-webkit-box-algin: center;
			display: -moz-box;
			-moz-box-orient: horizontal;
			-moz-box-algin: center;	
			width: 100%;		
		}
		
		.toolbarMenu {
			position: absolute;
			z-index: 30;
			background: #000;
			box-shadow: 1px 1px 3px rgba(0,0,0,0.5);
			-webkit-transition: clip 0.2s linear;
			-moz-transition: clip 0.2s linear;			
	        transition: clip 0.5s linear;  			
		}		
		
		.left {
			margin-left: 50px;
		}
		
		.toolbarMenuItem {
			padding: 1px 8px;
			cursor: pointer;
			font-size: 14px;
			color: #EEE;			
		}
		
		.toolbarMenuItem:HOVER {
			background-color: rgba(128, 128, 128, 0.5);
		}		
		
		.toolbarLogin {
			margin-right: 50px;
			display: -webkit-box;
			display: -moz-box;			
		}
		
		.spacer {
			-webkit-box-flex: 1;
			-moz-box-flex: 1;			
		}
	</ui:style>	
	<ui:with field='styles' type='placebooks.client.ui.styles.Styles'/>
	<ui:with field='images' type='placebooks.client.ui.images.Images'/>
	<g:FlowPanel styleName="{style.toolbar}">
		<p:PlaceBookToolbarItem ui:field="homeItem" addStyleNames="{style.left}"><ui:msg description="Placebooks">PLACEBOOKS</ui:msg></p:PlaceBookToolbarItem>
		<p:PlaceBookToolbarItem ui:field="createItem" addStyleNames="{style.left}" image="{images.toolbar_create}"><ui:msg description="Create">CREATE</ui:msg></p:PlaceBookToolbarItem>
		<p:PlaceBookToolbarItem ui:field="libraryItem" addStyleNames="{style.left}" image="{images.toolbar_library}"><ui:msg description="My Library">MY LIBRARY</ui:msg></p:PlaceBookToolbarItem>
		<g:FlowPanel styleName="{style.spacer}"/>
		<g:FlowPanel styleName="{style.toolbarLogin}" ui:field="loginPanel">
			<p:PlaceBookToolbarItem ui:field="loginLabel"><ui:msg description="Login">LOGIN</ui:msg></p:PlaceBookToolbarItem>		
			<g:InlineLabel> | </g:InlineLabel>
			<p:PlaceBookToolbarItem ui:field="signupLabel"><ui:msg description="Sign Up">SIGNUP</ui:msg></p:PlaceBookToolbarItem>			
		</g:FlowPanel>
		<p:PlaceBookToolbarItem addStyleNames="{style.toolbarLogin}" ui:field="accountItem" />		
		<p:DropMenu ui:field="dropMenu" styleName="{style.toolbarMenu}">
			<g:Label ui:field="linkedAccounts" styleName="{style.toolbarMenuItem}"><ui:msg description="Linked Accounts">Linked Accounts</ui:msg></g:Label>
			<g:Label ui:field="logout" styleName="{style.toolbarMenuItem}"><ui:msg description="Logout">Logout</ui:msg></g:Label>
		</p:DropMenu>		
	</g:FlowPanel>
</ui:UiBinder> 