<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:p="urn:import:placebooks.client.ui.elements"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="en">
	<ui:style type="placebooks.client.ui.elements.PlaceBookToolbar.ToolbarStyle">
		.signup {
			margin-left: 0px;
		}
		
		.toolbar {	
			font: 18px/40px mako, sans-serif;
			height: 40px;
			color: #ccc;
			background: #2d2d2d;
			background: -webkit-linear-gradient(top, #2d2d2d, #111);
			background: -moz-linear-gradient(top, #2d2d2d, #111);			
			border-bottom: 1px solid #84817a;
			width: 100%;
			overflow: hidden;		
		}
		
		.toolbarMenu {
			position: absolute;
			z-index: 1800;
			background: #000;
			box-shadow: 1px 1px 3px rgba(0,0,0,0.5);
	        transition: clip 0.2s linear;  			
		}		
		
		.left {
			text-transform: uppercase;	
			margin-left: 50px;
			float: left;
		}
		
		.toolbarMenuItem {
			padding: 1px 8px;
			cursor: pointer;
			font-size: 14px;
			color: #EEE;			
		}
		
		.toolbarMenuItem:HOVER {
			background-color: rgba(128, 128, 128, 0.5);
		}		
		
		.loginItem {
			display: inline-block;
		}
		
		.toolbarLogin {
			float: right;
			margin-right: 50px;
		}
	</ui:style>	
	<ui:with field='styles' type='placebooks.client.ui.styles.Styles'/>
	<ui:with field='images' type='placebooks.client.ui.images.Images'/>
	<g:FlowPanel styleName="{style.toolbar}">
		<p:PlaceBookToolbarItem ui:field="homeItem" addStyleNames="{style.left}"><ui:msg>PlaceBooks</ui:msg></p:PlaceBookToolbarItem>
		<p:PlaceBookToolbarItem ui:field="createItem" addStyleNames="{style.left}" image="{images.toolbar_create}"><ui:msg>Create</ui:msg></p:PlaceBookToolbarItem>
		<p:PlaceBookToolbarItem ui:field="libraryItem" addStyleNames="{style.left}" image="{images.toolbar_library}"><ui:msg>My Library</ui:msg></p:PlaceBookToolbarItem>
		<g:FlowPanel styleName="{style.toolbarLogin}" ui:field="loginPanel">
			<p:PlaceBookToolbarItem ui:field="loginLabel" addStyleNames="{style.loginItem}"><ui:msg>Login</ui:msg></p:PlaceBookToolbarItem>		
			<g:InlineLabel> | </g:InlineLabel>
			<p:PlaceBookToolbarItem ui:field="signupLabel" addStyleNames="{style.loginItem}"><ui:msg>SignUp</ui:msg></p:PlaceBookToolbarItem>			
		</g:FlowPanel>
		<p:PlaceBookToolbarItem addStyleNames="{style.toolbarLogin}" ui:field="accountItem" />
		<p:PlaceBookToolbarItem addStyleNames="{style.toolbarLogin}" ui:field="languageItem" />
		<p:DropMenu ui:field="dropMenu" styleName="{style.toolbarMenu}">
			<g:FlowPanel ui:field="languagePanel"></g:FlowPanel>
			<g:Label ui:field="groups" styleName="{style.toolbarMenuItem}"><ui:msg>Groups</ui:msg></g:Label>			
			<g:Label ui:field="linkedAccounts" styleName="{style.toolbarMenuItem}"><ui:msg>Linked Accounts</ui:msg></g:Label>
			<g:Label ui:field="logout" styleName="{style.toolbarMenuItem}"><ui:msg>Logout</ui:msg></g:Label>
		</p:DropMenu>		
	</g:FlowPanel>
</ui:UiBinder> 