<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:p="urn:import:placebooks.client.ui.widget" xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.itemFrame {		
			position: absolute;
			margin: 1px;
			-webkit-transition: opacity .5s linear, visibility .5s linear, z-index .5s linear;
			transition: opacity .5s linear, visibility .5s linear, z-index .5s linear;
			opacity: 0;
			visibility: hidden;			
		}
		
		.menuButton {
			right: 0px;
			top: 0px;
			position: absolute;
			width: 16px;
			height: 16px;
			background-color: #447;
			padding: 2px;
		}
		
		.menuButton:HOVER {
			background-color: #669;
		}		
		
		.dragSection {
			left: 0px;
			top: 0px;
			position: absolute;
			right: 20px;
			height: 20px;
			background-color: #447;
			min-height: 10px;
			cursor:move;
		}
		
		.borderSection {
			position: absolute;
			top: 20px;
			bottom: 5px;
			left: 0px;
			right: 0px;
			border-left: 2px solid #447;
			border-right: 2px solid #447;
		}
		
		.resizeSection {
			position: absolute;
			height: 6px;
			bottom: 0px;
			left: 0px;
			right: 0px;
			background: #447;
			cursor: s-resize;
		}
	</ui:style>

	<ui:with field='res' type='placebooks.client.resources.Resources' />

	<p:MousePanel styleName="{style.itemFrame}" ui:field="frame">
		<g:SimplePanel styleName="{style.borderSection}" ui:field="borderSection" />
		<p:MousePanel styleName="{style.menuButton}" ui:field="menuButton">
			<g:Image resource='{res.dropMenuIcon}' />
		</p:MousePanel>
		<p:MousePanel styleName="{style.dragSection}" ui:field="dragSection">
		</p:MousePanel>
		<p:MousePanel styleName="{style.resizeSection}" ui:field="resizeSection">
		</p:MousePanel>
	</p:MousePanel>
</ui:UiBinder> 