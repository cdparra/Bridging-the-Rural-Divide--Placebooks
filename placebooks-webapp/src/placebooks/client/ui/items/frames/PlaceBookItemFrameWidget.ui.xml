<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:p="urn:import:placebooks.client.ui.widget" xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.itemFrame {		
			position: absolute;
			-webkit-transition: opacity .5s linear, visibility .5s linear, z-index .5s linear;
			transition: opacity .5s linear, visibility .5s linear, z-index .5s linear;
			opacity: 0;
			visibility: hidden;			
		}
		
		.menuButton {
			right: 0px;
			top: 0px;
			position: absolute;
			width: 16px;
			height: 16px;
			background: -webkit-linear-gradient(top,#669,#447);
			padding: 3px;
		}
		
		.menuButton:HOVER {
			background: -webkit-linear-gradient(top,#88B,#669);
		}		
		
		.dragSection {
			left: 0px;
			top: 0px;
			position: absolute;
			right: 22px;
			height: 22px;
			background: -webkit-linear-gradient(top,#669,#447);
			min-height: 10px;
			cursor:move;
			line-height: 22px;
			padding-left: 5px;
			color: #111;
		}
		
		.borderSection {
			position: absolute;
			top: 20px;
			bottom: 5px;
			left: 0px;
			right: 0px;
			border-left: 2px solid #447;
			border-right: 2px solid #447;
		}
		
		.resizeSection {
			position: absolute;
			height: 6px;
			bottom: 0px;
			left: 0px;
			right: 0px;
			background: #447;
			cursor: s-resize;
		}
	</ui:style>

	<ui:with field='res' type='placebooks.client.resources.Resources' />

	<g:FlowPanel styleName="{style.itemFrame}" ui:field="frame">
		<g:SimplePanel styleName="{style.borderSection}" ui:field="borderSection" />
		<g:SimplePanel styleName="{style.menuButton}" ui:field="menuButton">
			<g:Image resource='{res.dropMenuIcon}' />
		</g:SimplePanel>
		<g:Label styleName="{style.dragSection}" ui:field="dragSection" />
		<g:SimplePanel styleName="{style.resizeSection}" ui:field="resizeSection" />
	</g:FlowPanel>
</ui:UiBinder> 