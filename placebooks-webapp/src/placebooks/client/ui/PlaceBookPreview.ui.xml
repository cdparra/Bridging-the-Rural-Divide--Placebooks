<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
	xmlns:pal="urn:import:placebooks.client.ui.palette" xmlns:p="urn:import:placebooks.client.ui.elements" xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.infoPanel {
			padding: 10px 30px;
			background: #EEE;
			border-bottom: 1px solid #CCC;
		}
		
		.fblike {
			float: right;
		}

		.gplus {
			float: right;
		}
		
		.title {
			font-size: 18px;
			margin-right: 5px;
		}
		
		.author	{
			margin-right: 5px;
		}
		
		.dropArrow {
			vertical-align: 20%;
		} 
		
		.menu {
			display: inline-block;
			padding: 0 5px;
		}
	</ui:style>	
	<ui:with field='styles' type='placebooks.client.ui.styles.Styles'/>
	<g:FlowPanel>
		<g:FlowPanel styleName="printHidden">
			<p:PlaceBookToolbar ui:field="toolbar" />
			<g:FlowPanel styleName="{style.infoPanel}" ui:field="infoPanel">
				<p:GooglePlusOne ui:field="googlePlus" styleName="{style.gplus}"/>			
				<p:FacebookLikeButton ui:field="facebookLike" styleName="{style.fblike}"/>		
				<g:FlowPanel>
					<p:MousePanel styleName="{style.menu}" ui:field="menuButton">
						<g:InlineLabel ui:field="titleLabel" styleName="{style.title}" />
						<g:InlineLabel styleName="{style.dropArrow}" ui:field="dropArrow">â–¼</g:InlineLabel>
					</p:MousePanel>
					<p:DropMenu ui:field="dropMenu" styleName="{styles.style.dropMenu}">
						<g:Label ui:field="delete" styleName="{styles.style.menuItem}">Delete PlaceBook</g:Label>			
					</p:DropMenu>		
					<g:FlowPanel>			
						<g:InlineLabel>&nbsp;by&nbsp;</g:InlineLabel>
						<g:Anchor ui:field="authorLabel" styleName="{style.author}"/>
					</g:FlowPanel>					
				</g:FlowPanel>							
			</g:FlowPanel>
		</g:FlowPanel>		
		<g:FlowPanel ui:field="canvasPanel" />
	</g:FlowPanel>
</ui:UiBinder>