<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:pal="urn:import:placebooks.client.ui.palette" xmlns:p="urn:import:placebooks.client.ui.elements"
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="en">
	<ui:style>
		.infoPanel {
			padding: 0px 30px;
			background: #EEE;
			border-bottom: 1px solid #CCC;
		}
		
		.title {
			font-size: 18px;
			margin-right: 5px;
		}
		
		.author {
			margin-right: 5px;
		}
		
		.dropArrow {
			vertical-align: 20%;
		}
		
		.parent {
			position: absolute;
			top: 0px;
			left: 0px;
			right: 0px;
			bottom: 0px;
		}
		
		.titleBlock {
			padding: 7px 0;
		}
		
		.actionMenu {
			font: 16px verdana, arial, sans-serif;
			padding: 5px;
		}
		
		.bookPanel {
			position: absolute;
			top: 92px;
			left: 0px;
			right: 0px;
			bottom: 0px;
		}
		
		.dropMenu {
			position: absolute;
			z-index: 3000;
			padding: 0px;
			-moz-transition: opacity .5s linear, visibility .5s linear;
			-webkit-transition: opacity .5s linear, visibility .5s linear;
			transition: opacity .5s linear, visibility .5s linear;
			background: #FFF;
			-moz-box-shadow: 3px 3px 4px #222;
			-webkit-box-shadow: 3px 3px 4px #222;
			box-shadow: 3px 3px 6px #222;
			border: 1px solid #DDD;
		}
		
		.menuItem {
			padding: 3px 12px;
			cursor: pointer;
			border-top: 1px solid #FFF;
			border-bottom: 1px solid #FFF;
		}
		
		.menuItem:HOVER {
			background: #ccc;
			border-top: 1px solid #BBB;
			border-bottom: 1px solid #BBB;
		}
		
		.right {
			float: right;
			padding-top: 15px;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.parent}">
		<g:FlowPanel styleName="printHidden">
			<p:PlaceBookToolbar ui:field="toolbar" />
			<g:FlowPanel ui:field="infoPanel" styleName="{style.infoPanel}">
				<p:PlaceBookToolbarItem ui:field="actionMenu"
					addStyleNames="{style.actionMenu} {style.right}"><ui:msg>Actions</ui:msg></p:PlaceBookToolbarItem>				
				<p:GooglePlusOne ui:field="googlePlus" styleName="{style.right}" />
				<p:FacebookLikeButton ui:field="facebookLike" styleName="{style.right}" />
				<g:FlowPanel styleName="{style.titleBlock}">
					<g:Label ui:field="titleLabel" styleName="{style.title}" />
					<g:FlowPanel>
						<g:InlineLabel>&nbsp;by&nbsp;</g:InlineLabel>
						<g:Anchor ui:field="authorLabel" styleName="{style.author}" />
					</g:FlowPanel>
				</g:FlowPanel>				
			</g:FlowPanel>
			<p:DropMenu ui:field="dropMenu" styleName="{style.dropMenu}">
				<g:Label ui:field="delete" styleName="{style.menuItem}"><ui:msg>Delete PlaceBook</ui:msg></g:Label>
			</p:DropMenu>
		</g:FlowPanel>
		<p:PlaceBookPages ui:field="bookPanel" styleName="{style.bookPanel}" />
		<p:ProgressPanel ui:field="loadingPanel" text="Loading..." />
	</g:FlowPanel>
</ui:UiBinder>