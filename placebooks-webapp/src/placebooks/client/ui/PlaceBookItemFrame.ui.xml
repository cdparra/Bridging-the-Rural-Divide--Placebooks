<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:p="urn:import:placebooks.client.ui.widget" xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.itemFrame {
			position: absolute;
		}
		
		.menuButton {
			top: 0px;
			position: absolute;
			right: 0px;
			width: 16px;
			height: 16px;
			border: 2px solid #447;
			background-color: #669;
			padding: 2px;
			opacity: 0;
			-webkit-transition: opacity .5s linear;
			transition: opacity .5s linear;
		}
		
		.dragSection {
			top: 20px;
			bottom: 0px;
			position: absolute;
			right: 0px;
			width: 20px;
			border: 2px solid #447;
			opacity: 0;			
			background-color: #669;
			-webkit-transition: opacity .5s linear;
			transition: opacity .5s linear;
			cursor: move;
		}
		
		.borderSection {
			top: 0px;
			bottom: 0px;
			position: absolute;
			left: 0px;
			right: 0px;
			border: 2px solid #447;
			opacity: 0;			
			-webkit-transition: opacity .5s linear;
			transition: opacity .5s linear;
			z-index: -5;
		}
		
		.widget {
			position: relative;
			margin-top: 2px;
			margin-left: 22px;
			margin-right: 24px;
			margin-bottom: 2px;
			overflow: hidden;
		}
	</ui:style>

	<ui:with field='res' type='placebooks.client.ui.Resources' />

	<p:MousePanel styleName="{style.itemFrame}" ui:field="frame">
		<g:SimplePanel styleName="{style.widget}" ui:field="widgetPanel"></g:SimplePanel>
		<p:MousePanel styleName="{style.borderSection}" ui:field="borderSection">
			<p:MousePanel></p:MousePanel>
		</p:MousePanel>
		<p:MousePanel styleName="{style.menuButton}" ui:field="menuButton">
			<g:Image resource='{res.dropMenuIcon}' />
		</p:MousePanel>
		<p:MousePanel styleName="{style.dragSection}" ui:field="dragSection">
			<p:MousePanel></p:MousePanel>
		</p:MousePanel>
	</p:MousePanel>
</ui:UiBinder> 