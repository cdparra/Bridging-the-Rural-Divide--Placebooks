<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:p="urn:import:placebooks.client.ui.widget" xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.itemFrame {
			position: absolute;
			margin: 1px;
		}
		
		.menuButton {
			left: 0px;
			top: 0px;
			position: absolute;
			width: 16px;
			height: 16px;
			border: 1px solid #447;
			background-color: #669;
			padding: 2px;
			opacity: 0;
			-webkit-transition: opacity .5s linear, visibility .5s linear;
			transition: opacity .5s linear, visibility .5s linear;
			visibility: hidden;
		}
		
		.dragSection {
			left: 21px;
			top: 0px;
			position: absolute;
			right: 0px;
			height: 20px;
			border: 1px solid #447;
			opacity: 0;			
			background-color: #669;
			-webkit-transition: opacity .5s linear, visibility .5s linear;
			transition: opacity .5s linear, visibility .5s linear;
			visibility: hidden;		
			min-height: 10px;	
		}
		
		.borderSection {
			top: 22px;
			bottom: 5px;
			position: absolute;
			left: 0px;
			right: 0px;
			border-left: 2px solid #447;
			border-right: 2px solid #447;			
			opacity: 0;			
			-webkit-transition: opacity .5s linear, visibility .5s linear;
			transition: opacity .5s linear, visibility .5s linear;
			visibility: hidden;			
		}

		.resizeSection {
			height: 5px;
			bottom: 0px;
			left: 0px;
			right: 0px;
			background: #447;
			opacity: 0;			
			visibility: hidden;			
			-webkit-transition: opacity .5s linear, visibility .5s linear;
			transition: opacity .5s linear, visibility .5s linear;
			visibility: hidden;					
		}
		
		.widget {
			position: relative;
			margin-top: 25px;
			margin-left: 5px;
			margin-right: 5px;
			margin-bottom: 3px;
			z-index: 2;
			overflow: hidden;
		}
	</ui:style>

	<ui:with field='res' type='placebooks.client.resources.Resources' />

	<p:MousePanel styleName="{style.itemFrame}" ui:field="frame">
		<p:MousePanel styleName="{style.widget}" ui:field="widgetPanel"></p:MousePanel>
		<p:MousePanel styleName="{style.borderSection}" ui:field="borderSection">
			<p:MousePanel></p:MousePanel>
		</p:MousePanel>
		<p:MousePanel styleName="{style.menuButton}" ui:field="menuButton">
			<g:Image resource='{res.dropMenuIcon}' />
		</p:MousePanel>
		<p:MousePanel styleName="{style.dragSection}" ui:field="dragSection">
		</p:MousePanel>
		<p:MousePanel styleName="{style.resizeSection}" ui:field="resizeSection">
		</p:MousePanel>
	</p:MousePanel>
</ui:UiBinder> 