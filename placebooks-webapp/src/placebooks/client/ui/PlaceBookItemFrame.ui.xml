<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:p="urn:import:placebooks.client.ui"
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.itemFrame {
			position: absolute;
			width: 100px;
			height: 80px;
		}
	
		.menuButton {
			top: 0px;
			position: absolute;
			right: 0px;
			width: 20px;
			height: 20px;
			border: 2px solid #447;
			background-color: #669;
			-webkit-transition: opacity .5s linear;
			transition: opacity .5s linear;
			-webkit-user-select: none;
			-moz-user-select: none;
			user-select: none;			
		}
		
		.expandSection {
			bottom: 0px;
			position: absolute;
			right: 0px;
			width: 20px;
			height: 20px;
			border: 2px solid #447;
			background-color: #669;
			-webkit-transition: opacity .5s linear;
			transition: opacity .5s linear;
			-webkit-user-select: none;
			-moz-user-select: none;
			user-select: none;		
			cursor: se-resize;	
		}
		
		.dragSection {
			top: 20px;
			bottom: 20px;
			position: absolute;
			right: 0px;
			width: 20px;
			border: 2px solid #447;
			background-color: #669;
			-webkit-transition: opacity .5s linear;
			transition: opacity .5s linear;	
											-webkit-user-select: none;
			-moz-user-select: none;
			user-select: none;
			cursor: move;
		}
		
		.borderSection {
			top: 0px;
			bottom: 0px;
			position: absolute;
			left: 0px;
			right: 0px;
			border: 2px solid #447;
			-webkit-transition: opacity .5s linear;
			transition: opacity .5s linear;	
								-webkit-user-select: none;
			-moz-user-select: none;
			user-select: none;
			z-index: -5;
		}
		
		.widget {
			position: absolute;
			top: 0px;
			left: 0px;
			right: 20px;
			bottom: 0px;	
			overflow: hidden;		
		}
	</ui:style>
	<p:MousePanel styleName="{style.itemFrame}" ui:field="frame">
		<g:SimplePanel styleName="{style.widget}" ui:field="widgetPanel"></g:SimplePanel>
		<p:MousePanel styleName="{style.borderSection}" ui:field="borderSection"><p:MousePanel></p:MousePanel></p:MousePanel>	
		<p:MousePanel styleName="{style.menuButton}" ui:field="menuButton"><p:MousePanel></p:MousePanel></p:MousePanel>	
		<p:MousePanel styleName="{style.dragSection}" ui:field="dragSection"><p:MousePanel></p:MousePanel></p:MousePanel>
		<p:MousePanel styleName="{style.expandSection}" ui:field="expandSection"><p:MousePanel></p:MousePanel></p:MousePanel>
	</p:MousePanel>
</ui:UiBinder> 