<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.block {
			width: 65%;
			display: inline-block;
			position: relative;
			-moz-box-sizing: border-box;			
			-webkit-box-sizing: border-box;
			padding: 5px;
		}
		
		.label {
			color: #333;
			font-weight: bold;
			padding-right: 10px;
			width: 35%;
			text-align: right;
			display: inline-block;
			-webkit-box-sizing: border-box;
			-moz-box-sizing: border-box;
			vertical-align: top;
			padding-top: 12px;
		}
		
		.detailLabel {
			

		}
		
		.input {
			padding: 3px 5px;
			color: #333;
			border-radius: 3px;
			border: 1px solid #666;
			box-shadow: inset 2px 2px 5px #DDD;
			width: 100%;
			-moz-box-sizing: border-box;			
			-webkit-box-sizing: border-box;
			display: inline-block;
		}
		
		.helpText {
			color: #777;
			font-size: 10px;
			padding: 2px 5px;
			font-style: italic;	
		}
		
		.inputUneditable {
			padding: 3px 5px;
			margin: 6px;
			color: #333;
			border-radius: 3px;
			border: 0px;
			background-color: transparent;	
			-webkit-appearance: none;			
		}	
		
		.inputError {
			border: 1px solid #B32;
			box-shadow: 0 0 2px #B32, inset 0 0 2px #B32, inset 2px 2px 5px #DDD;
		}
	</ui:style>
	<g:FlowPanel>
		<g:Label ui:field="label" styleName="{style.label}" />
		<g:FlowPanel styleName="{style.block}">
			<g:TextBox ui:field="input" styleName="{style.input}" />
			<g:Image ui:field="errorImage" />
			<g:Image ui:field="helpImage" />			
			<g:Label ui:field="detailLabel" />
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 