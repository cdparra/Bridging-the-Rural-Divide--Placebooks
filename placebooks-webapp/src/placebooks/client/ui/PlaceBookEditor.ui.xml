<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:pb="urn:import:placebooks.client.ui"
	xmlns:pal="urn:import:placebooks.client.ui.palette" xmlns:p="urn:import:placebooks.client.ui.widget" xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.canvasPanel {
			position: absolute;
			top: 41px;
			left: 0px;
			right: 120px;
			bottom: 0px;
			background: #BBD;		
			overflow-x: auto;
			overflow-y: scroll;	
		}
		
		.innerCanvasPanel {
			position: absolute;
			top: 20px;
			left: 0px;
			right: 0px;
			bottom: 0px;
			margin: 20px;
		}		
		
		.palette {
			position: absolute;
			text-align: center;
			top: 41px;
			right: 0px;
			bottom: 0px;
			width: 120px;
			z-index: -10;
			background: #556;	
			overflow: auto;
		}
			
		.loadingPanel {
			position: absolute;
			text-align: center;
			top: 0px;
			right: 0px;
			bottom: 0px;
			left: 0px;
			z-index: 20;
			background: rgba(0,0,0,0.4);	
		}
		
		.loading {
			background: #555;
			border: 1px solid #333;
			border-radius: 5px;
			margin-top: 100px;
			padding: 10px 20px;
			display: inline-block;
		}

		.savingLabel {
			line-height: 40px;
			padding: 0 15px;
		}

		.populate {
			position: absolute;
			text-align: center;
			top: 0px;
			right: 0px;
			height: 20px;
			width: 120px;
			z-index: -5;			
		}
		
		.titleLabel {
			-webkit-user-select: text;
			-moz-user-select: text;
			-o-user-select: text;			
			user-select: text;	
			display: inline;
			border: 0px;
			background: transparent;
			font: 18px/40px mako, sans-serif;
			width: 250px;			
		}
		
		.loadingLabel {
			color: white;
			font-family: Verdana, Arial, sans-serif;
			font-size: 25px;
			padding-left: 15px;
			vertical-align: top;
		}
		
		.toolbar {
			font: 18px/40px mako, sans-serif;
			height: 40px;
			color: #000;
			padding: 0 20px;
		}
		
		.account {
			padding: 0px;
			float:right;
			cursor: default;
		}
		
		.body {
			-webkit-user-select: none;	
			-moz-user-select: none;
			-o-user-select: none;			
			user-select: none;
			overflow: hidden;			
		}

		.floatLeft {
			float: left;
		}
		
		.floatRight {
			float: right;	
		}
		
		.placeBookMenu {
			border: 1px solid black;
			border-bottom: 0px;
			border-top-left-radius: 5px;
			border-top-right-radius: 5px;
			background-color: white;
			font-size: 12px;
			padding: 0 5px;
			margin-top: 10px;
			margin-right: 5px;
			line-height: 30px;
			cursor: default;
		}
		
		.placeBookMenu:HOVER {
			background-color: rgba(255,255,255,0.2);			
		}		

		.imageButton {
			padding: 0 5px;
			padding-top: 2px;
			height: 38px;
		}
				
		.imageButton:HOVER {
			background-color: rgba(255,255,255,0.2);			
		}
	</ui:style>	
	<ui:with field='res' type='placebooks.client.resources.Resources'/>	
	<p:MousePanel ui:field="backPanel" styleName="{style.body}">
		<g:SimplePanel styleName="{style.loadingPanel}" ui:field="loadingPanel"><g:FlowPanel styleName="{style.loading}"><g:Image resource='{res.progress}' /><g:InlineLabel styleName="{style.loadingLabel}">LOADING</g:InlineLabel></g:FlowPanel></g:SimplePanel>
		<pb:PlaceBookToolbar ui:field="toolbar" />
		<g:FlowPanel styleName="{style.canvasPanel}">
			<g:FlowPanel styleName="{style.toolbar}">
				<g:Label styleName="{style.account}" ui:field="zoomLabel">100%</g:Label>
				<p:MousePanel addStyleNames="{style.imageButton} {style.floatRight}" ui:field="zoomIn"><g:Image resource="{res.zoom_in}" /></p:MousePanel>
				<p:MousePanel addStyleNames="{style.imageButton} {style.floatRight}" ui:field="zoomOut"><g:Image resource="{res.zoom_out}" /></p:MousePanel>
				<pb:PlaceBookToolbarItem ui:field="saveStatusPanel" />
				<p:MousePanel addStyleNames="{style.placeBookMenu} {style.floatLeft}" ui:field="menu"><!--<g:Image resource="{res.placebook16}"/>--><g:InlineLabel>PlaceBook&nbsp;</g:InlineLabel><g:InlineLabel styleName="{res.style.dropIcon}">&#9660;</g:InlineLabel></p:MousePanel>						
				<g:TextBox ui:field="title" styleName="{style.titleLabel}" />			
			</g:FlowPanel>			
			<g:SimplePanel styleName="{style.innerCanvasPanel}" ui:field="canvasPanel" />
		</g:FlowPanel>	
		<pal:Palette styleName="{style.palette}" ui:field="palette" />
	</p:MousePanel>
</ui:UiBinder>