<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:pal="urn:import:placebooks.client.ui.palette" xmlns:p="urn:import:placebooks.client.ui.widget" xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.canvasPanel {
			position: absolute;
			top: 30px;
			left: 0px;
			right: 120px;
			bottom: 0px;
			background: #BBD;		
			overflow-x: auto;
			overflow-y: scroll;	
		}
		
		.innerCanvasPanel {
			position: absolute;
			top: 0px;
			left: 0px;
			right: 0px;
			bottom: 0px;
			margin: 20px;
		}		
		
		.palette {
			position: absolute;
			text-align: center;
			top: 30px;
			right: 0px;
			bottom: 0px;
			width: 120px;
			z-index: -10;
			background: #556;	
			overflow: auto;
		}
			
		.loadingPanel {
			position: absolute;
			text-align: center;
			top: 0px;
			right: 0px;
			bottom: 0px;
			left: 0px;
			z-index: 20;
			background: rgba(0,0,0,0.4);	
		}
		
		.loading {
			background: #555;
			border: 1px solid #333;
			border-radius: 5px;
			margin-top: 100px;
			padding: 10px 20px;
			display: inline-block;
		}

		.savingLabel {
			color: white;
			font-family: Verdana, Arial, sans-serif;
			font-size: 15px;
			padding-left: 15px;
			vertical-align: top;
		}

		.savingPanel {
			position: absolute;
			top: 30px;
			right: 120px;
			height: 15px;
			background: #555;
			border-left: 1px solid #333;
			border-bottom: 1px solid #333;			
			border-bottom-left-radius: 5px;
			padding: 5px 20px 10px 15px;
			display: none;
			z-index: 55;
		}

		.titleBar {
			position: absolute;
			font: 13px/27px Arial,sans-serif;
			top: 0px;
			left: 0px;
			right: 0px;
			height: 30px;
			color: #CCC;
			box-shadow: 2px 2px 2px 333;	
			background: #2D2D2D;
			overflow: none;		
		}
		
		.populate {
			position: absolute;
			text-align: center;
			top: 0px;
			right: 0px;
			height: 20px;
			width: 120px;
			z-index: -5;			
		}
		
		.titleLabel {
			-webkit-user-select: text;
			-moz-user-select: text;
			-o-user-select: text;			
			user-select: text;			
		}
		
		.loadingLabel {
			color: white;
			font-family: Verdana, Arial, sans-serif;
			font-size: 25px;
			padding-left: 15px;
			vertical-align: top;
		}
		
		.account {
			border-left: 1px solid grey;
			padding: 0px 4px;
			float:right;
			cursor: default;
		}
		
		.zoomImage {
			margin: 2px;
			float:right;
		}
		
		.body {
			-webkit-user-select: none;	
			-moz-user-select: none;
			-o-user-select: none;			
			user-select: none;			
		}
	</ui:style>	
	<ui:with field='res' type='placebooks.client.resources.Resources'/>	
	<p:MousePanel ui:field="backPanel" styleName="{style.body}">
		<g:SimplePanel styleName="{style.loadingPanel}" ui:field="loadingPanel"><g:FlowPanel styleName="{style.loading}"><g:Image resource='{res.progress}' /><g:InlineLabel styleName="{style.loadingLabel}">LOADING</g:InlineLabel></g:FlowPanel></g:SimplePanel>	
		<g:FlowPanel styleName="{style.titleBar}">
			<p:MousePanel styleName="{style.account}" ui:field="account"><g:InlineLabel ui:field="accountLabel" /><g:Image resource='{res.dropMenuIcon}' /></p:MousePanel>
			<g:Image styleName="{style.zoomImage}" resource="{res.zoom_in}" ui:field="zoomIn" />
			<g:Image styleName="{style.zoomImage}" resource="{res.zoom_out}" ui:field="zoomOut" />
			<g:Label styleName="{style.account}" ui:field="zoomLabel">100%</g:Label>			
			<p:RichTextArea ui:field="title" styleName="{style.titleLabel}" />			
		</g:FlowPanel>
		<g:FlowPanel styleName="{style.savingPanel}" ui:field="savingPanel"><g:Image resource='{res.progress2}' /><g:InlineLabel styleName="{style.savingLabel}">Saving</g:InlineLabel></g:FlowPanel>		
		<g:SimplePanel styleName="{style.canvasPanel}"><g:SimplePanel styleName="{style.innerCanvasPanel}" ui:field="canvasPanel" /></g:SimplePanel>	
		<pal:Palette styleName="{style.palette}" ui:field="palette" />
	</p:MousePanel>
</ui:UiBinder>