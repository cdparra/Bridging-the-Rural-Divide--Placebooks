<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:FlowPanel>
		<g:Label>Email:</g:Label>
		<g:TextBox name="j_username" ui:field="emailBox" />
		<g:Label>Password:</g:Label>
		<g:PasswordTextBox name="j_password" ui:field="passwordBox" />
		<g:Button ui:field="loginButton">Login</g:Button>
		<g:Anchor ui:field="createAccount">Create an Account</g:Anchor>
	</g:FlowPanel>
</ui:UiBinder> 