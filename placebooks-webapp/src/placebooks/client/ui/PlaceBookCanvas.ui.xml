<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:p="urn:import:placebooks.client.ui.widget">
	<ui:style>
		.canvas {
			position: absolute;
			top: 0px;
			left: 0px;
			right: 0px;
			bottom: 0px;
			margin-right: 150px;
			background-color: #BBD;		
			box-shadow: 2px 2px 2px #333;
			-webkit-user-select: none;
			-moz-user-select: none;
			user-select: none;
		}
		
		.palette {
			position: absolute;
			top: 0px;
			right: 0px;
			bottom: 0px;
			width: 150px;
			z-index: -10;
			background: #556;	
			-webkit-user-select: none;
			-moz-user-select: none;
			user-select: none;	
		}
	</ui:style>	
	<p:MousePanel>
		<p:MousePanel styleName="{style.canvas}" ui:field="canvas">
		</p:MousePanel>	
		<p:MousePanel styleName="{style.palette}" ui:field="palette">
		</p:MousePanel>
	</p:MousePanel>
</ui:UiBinder> 