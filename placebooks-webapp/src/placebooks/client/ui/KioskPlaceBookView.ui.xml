<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:pal="urn:import:placebooks.client.ui.palette" xmlns:p="urn:import:placebooks.client.ui.elements"
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="en">
	<ui:style>
		.infoPanel {
			padding: 0px 30px;
			background: #EEE;
			border-bottom: 1px solid #CCC;
		}
		
		.title {
			font-size: 18px;
			margin-right: 5px;
		}
		
		.author {
			margin-right: 5px;
		}

		.actionMenu {
			font: 16px verdana, arial, sans-serif;
			padding: 5px;
		}
		
		.dropArrow {
			vertical-align: 20%;
		}
		
		.parent {
			position: absolute;
			top: 0px;
			left: 0px;
			right: 0px;
			bottom: 0px;
		}
		
		.titleBlock {
			padding: 7px 0;
		}
		
		.groupTag {
			padding: 3px 8px;
			background: #999;
			border-radius: 3px;
			margin-right: 10px;
			cursor: pointer;
		}

		.bookPanel {
			position: absolute;
			top: 51px;
			left: 0px;
			right: 0px;
			bottom: 0px;
		}
		
		.right {
			float: right;
			margin-top: 15px;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.parent}">
		<g:FlowPanel styleName="printHidden">
			<g:FlowPanel ui:field="infoPanel" styleName="{style.infoPanel}">			
				<p:PlaceBookToolbarItem ui:field="back"
					addStyleNames="{style.actionMenu} {style.right}"><ui:msg>Back</ui:msg></p:PlaceBookToolbarItem>				    
				<p:GooglePlusOne ui:field="googlePlus" styleName="{style.right}" />
				<p:FacebookLikeButton ui:field="facebookLike" styleName="{style.right}" />
				<g:FlowPanel styleName="{style.titleBlock}">
					<g:Label ui:field="titleLabel" styleName="{style.title}" />
					<g:FlowPanel>
						<g:InlineLabel>&nbsp;by&nbsp;</g:InlineLabel>
						<g:Anchor ui:field="authorLabel" styleName="{style.author}" />
					</g:FlowPanel>
				</g:FlowPanel>				
			</g:FlowPanel>
		</g:FlowPanel>
		<p:PlaceBookPages ui:field="bookPanel" styleName="{style.bookPanel}" />
		<p:ProgressPanel ui:field="loadingPanel" text="Loading..." />
	</g:FlowPanel>
</ui:UiBinder>