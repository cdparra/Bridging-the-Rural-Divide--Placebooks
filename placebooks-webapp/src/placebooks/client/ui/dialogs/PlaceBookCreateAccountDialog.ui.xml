<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.title {
			background-color: #999;
			padding: 10px;
			font-weight: bold;
			color: #FFF;
		}
		
		.content {
			padding: 10px;
		}
	</ui:style>
	<g:FlowPanel>
		<g:Label styleName="{style.title}">Create Account</g:Label>
		<g:FlowPanel styleName="{style.content}">
			<g:Label>Name:</g:Label>
			<g:TextBox ui:field="name" />
			<g:Label>Email:</g:Label>
			<g:TextBox ui:field="email" />		
			<g:Label>Password:</g:Label>
			<g:PasswordTextBox ui:field="password" />
			<g:Label>Password Confirmation:</g:Label>
			<g:PasswordTextBox ui:field="passwordConfirm" />
			<g:SimplePanel><g:Button ui:field="createAccount">Create Account</g:Button></g:SimplePanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 