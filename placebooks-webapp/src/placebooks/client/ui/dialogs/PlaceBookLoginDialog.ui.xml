<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.title {
			background-color: #999;
			padding: 10px;
			font-weight: bold;
			color: #FFF;
		}
		
		.content {
			padding: 10px;
		}
		
		.button {
			float: right;
			margin: 10px 0;
		}
		
		.error {
			background-color: #900;
			padding: 10px;
			font-weight: bold;
			color: #FFF;			
			display: none;
		}
	</ui:style>
	<g:FlowPanel>
		<g:Label ui:field="titleLabel" styleName="{style.title}">Link Everytrail Account</g:Label>
		<g:Label ui:field="errorLabel" styleName="{style.error}"></g:Label>
		<g:FlowPanel ui:field="content" styleName="{style.content}">
			<g:Label ui:field="usernameLabel">UserName:</g:Label>
			<g:TextBox ui:field="username"  name="pb_username" />
			<g:Label>Password:</g:Label>
			<g:PasswordTextBox ui:field="password" name="pb_password" />
			<g:SimplePanel><g:Button styleName="{style.button}" ui:field="submit">Link Everytrail Account</g:Button></g:SimplePanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 